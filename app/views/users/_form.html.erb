<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true, data: { turbo: false }) do |form| %>
  <%= form.label :username, "Username:" %>
  <%= form.text_field :username, placeholder: "Enter your username" %>
  <%= form.label :email, "Email:" %>
  <%= form.text_field :email, placeholder: "Enter your email" %>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password, placeholder: "Enter a password" %>
  <%= form.submit %>
<% end %>
